@model List<UserViewModel>

<h1>System Users!</h1>
<hr />

<a href="~/User/Create" class="btn btn-primary">Add User!</a>
<br />

@if(Model.Any())
{
    <br />
    
    <table class="table table-hover">
        <tr>
            
                @* <th>Id</th> ما بينعرض*@
                <th>UserName</th>
                <th>Email</th>
                <th>PhoneNumber</th>
                <th>Creation Date</th>
                <th>Operation</th>
            
        </tr>
        
            @foreach(var user in Model)
            {<tr>
                @* <th>@user.Id</th>*@ 
                <th>@user.UserName</th>
                <th>@user.Email</th>
                <th>@user.PhoneNumber</th>
                <th>@user.CreatedAt.ToString("yyyy-MM-dd")</th>
                <th><a class="btn btn-danger" href="~/User/Delete" >Delete</a></th>
            
        </tr>}
    </table>
}
else{
    <br />
<div class="alert alert-warning">No Users Here!</div>
}